<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.digitalcanteen">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".app.AppController"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activity.MainPage"
            android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.AccountsActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".activity.AdminActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".activity.LoginActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".activity.RegisterActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".activity.WithoutLogin"
            android:screenOrientation="landscape" />
        <activity
            android:name=".activity.layoutMenu"
            android:screenOrientation="landscape" />
        <activity
            android:name=".activity.selected"
            android:screenOrientation="landscape" />
        <activity
            android:name=".activity.OrderComplete"
            android:screenOrientation="landscape" />
        <activity
            android:name=".activity.EditMenu"
            android:screenOrientation="landscape" />
        <activity
            android:name=".activity.ChangeActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".activity.AddMoreMoney"
            android:screenOrientation="landscape" />
        <activity
            android:name=".activity.CheckBalance"
            android:screenOrientation="landscape" />
        <activity
            android:name=".activity.AddItem"
            android:screenOrientation="landscape" />
        <activity
            android:name=".activity.Balance"
            android:screenOrientation="landscape" />
        <activity
            android:name=".activity.TransactionActivity"
            android:screenOrientation="landscape"></activity>
    </application>

</manifest>